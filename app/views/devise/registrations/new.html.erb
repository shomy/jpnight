 <%= form_with(model: @user, local: true) do |form| %>
 <section id= "regi-form" class='panel-group'>

  <div class= "panel is-show">
    <h3 style ="font-family: 'Poiret One', cursive;"><u><i class="fas fa-cog fa-fw"></i> BASIC INFO</u></h3>

    <div class ="myinfo-label">Please enter your Email</div>
    <%= form.text_field :email, autofocus: true, autocomplete: "email", class: "myinfo_basic"%>

    <div class ="myinfo-label">Please enter your Password.<br>Password must be a mixture of 8 alphanumeric characters.
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %> characters minimum)
    <% end %><br />
    </div>
    <%= form.password_field :password, autocomplete: "new-password", class: "myinfo_basic" %>

    <div class ="myinfo-label">Please enter your Password,again.</div>
    <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "myinfo_basic" %>

    <div><%= link_to form.submit 'Regist', :class => "regi-btn" %></div>
  </div>
 </section>
 <% end %>

